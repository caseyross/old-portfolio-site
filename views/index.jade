doctype
html(ng-app='portfolio')
    head
        link(href='app.css' rel='stylesheet')
        // link(href='https://fonts.googleapis.com/css?family=' rel='stylesheet')
    body(ng-controller='PortfolioController as PC')
        section.name-container
            h1#name casey ross
        section.scale-container
            .scale-label coding
            hr.scale
            .scale-label design
        section.projects-container
            button.btn.project(ng-repeat='project in PC.projects' ng-click='PC.selectProject($index)' ng-class='{ selected: PC.selectedProject === $index }') {{ project.name }}
        section.details-container(ng-repeat='project in PC.projects' ng-show='PC.selectedProject === $index')
            .image-container
                img(ng-repeat='image in project.images' ng-click='PC.selectImage($index)' ng-src='https://res.cloudinary.com/dp7mdyryy/image/upload/c_fill,h_200,q_100,w_200/{{ project.images[$index] }}')
            .text-container
                .description {{ project.description }}
                .meta
                    .year {{ project.year }}
                    .type {{ project.type }}
                .technologies
                    .technology(ng-repeat='technology in project.technologies') {{ technology }}
                a.btn(ng-href='{{ project.livelink }}' ng-show='project.livelink' target='_blank') Live site
                a.btn(ng-href='{{ project.github }}' ng-show='project.github' target='_blank') Github
            .image-overlay(ng-show='PC.isImageSelected()' ng-click='PC.deselectImage()')
                img.lazyload(ng-repeat='image in project.images' ng-show='PC.selectedImage === $index' data-src='https://res.cloudinary.com/dp7mdyryy/image/upload/c_fit,h_700,q_100,w_1000/{{ project.images[$index] }}')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.js')
        script(src='lazysizes.min.js')
        script(src='portfolio.js')