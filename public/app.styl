*
    box-sizing border-box

html
    font-family sans-serif
    font-size 62.5%
    
h1
    font-size 6rem
    font-weight normal
    
h2
    font-size 3rem
    font-weight normal
    
section
    width 100%
    text-align center

.name-container
    margin-top 100px
    margin-bottom 50px
    color gray

.scale-container
    margin-bottom 25px

    .scale
        height 2px
        width 60%
        margin 5px 10px 5px 10px
        display inline-block
        border 0
        background linear-gradient(to right, blue, red)
        
    .scale-label
        display inline-block
        font-size 1.2rem
    
.projects-container
    background white
            
    .project
        margin 10px
    
.details-container
    margin-top 50px
            
    .text-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        text-align left
        font-size 2rem
        
        .description
            max-width 500px
            margin-bottom 25px
            white-space pre-wrap
            
        .meta
            margin-bottom 10px
            
            .year
                margin 5px
                display inline-block
                font-size 1.6rem
            
            .type
                margin 5px
                display inline-block
                font-size 1.6rem
            
        .technologies
            margin-bottom 10px
        
            .technology
                margin 5px
                display inline-block
                font-size 1.2rem
    
    .image-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        
        img
            height 250px
            padding-left 10px
            float right
        
.btn
    padding 10px 20px 10px 20px
    display inline-block
    font-size 2rem
    background white
    border 2px solid gray
    color gray
    cursor pointer
    
    &:hover
    &:focus
        background gray
        color white
        outline none
        
    &.selected
        background gray
        color white