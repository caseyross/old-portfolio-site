*
    box-sizing border-box

html
    font-family 'Raleway', sans-serif
    font-size 62.5%
        
    @media screen and (min-resolution: 130dpi)
        font-size 125%
    
h1
    font-size 5rem
    font-weight 400
    
section
    width 100%
    text-align center

nav
    display inline

.contact-link-container
    height 100px
    margin-bottom 100px
    
    a
        margin 20px
        float left
        font-size 2rem
        color gray
        text-decoration none
        
        &:hover
        &:focus
            color #333
            font-weight 700
            text-decoration underline
            
        @media screen and (min-resolution: 130dpi)
            font-size 3rem

.name-container
    margin-bottom 50px
    color gray

.projects-container
    margin-bottom 100px
    @media screen and (max-resolution: 130dpi)
        margin-bottom 25px
    background white
    
    .label
        margin 10px
        padding 10px 20px
        display inline-block
        font-size 1.6rem
        font-weight 700
        
        @media screen and (min-resolution: 130dpi)
            display none
        
        @media screen and (max-width: 1337px)
            display none
            
    .project
        margin 10px
        font-size 2.4rem
    
.details-container
            
    .text-container
        width 80%
        @media screen and (max-resolution: 130dpi)
            width 50%
        padding 20px
        display inline-block
        vertical-align top
        text-align left
        
        .title
            margin-bottom 50px
            @media screen and (max-resolution: 130dpi)
                margin-bottom 25px
            font-size 2rem
            
        .commentary
            max-width 700px
            margin-left 10px
            margin-bottom 30px
            @media screen and (max-resolution: 130dpi)
                margin-bottom 20px
            font-size 1.6rem
            line-height 1.5
            @media screen and (max-resolution: 130dpi)
                line-height 1.3
            white-space pre-wrap
            font-family sans-serif
            color #333
            
        .meta
            margin-bottom 10px
            
            .year
                margin 5px
                display inline-block
                font-size 1.6rem
            
            .type
                margin 5px
                display inline-block
                font-size 1.6rem
            
        .technologies
            margin-bottom 50px
            @media screen and (max-resolution: 130dpi)
                margin-bottom 25px
            margin-left -10px
        
            .technology
                margin 10px 20px
                display inline-block
                font-size 2rem
                color #999
                
        .btn
            text-decoration none
            border 1px solid #999
            border-radius 5px
            
    
    .image-container
        @media screen and (max-resolution: 130dpi)
            width 50%
        margin-bottom 50px
        padding 20px
        display inline-block
        vertical-align top
        
        img
            height 250px
            margin-left 20px
            margin-bottom 20px
            @media screen and (max-resolution: 130dpi)
                float right
            // border 1px solid gray
            border-radius 5px
            cursor pointer
            transition all 0.2s ease-out
            
            &:hover
            &:focus
                opacity 0.5
            
    .image-overlay
        height 100vh
        position fixed
        top 0
        bottom 0
        left 0
        right 0
        // padding-top 50%
        background rgba(0, 0, 0, .8)
        cursor pointer
        
        // TODO: decide where to show picture on mobile
        // @media screen and (min-resolution 130dpi)
        //     padding-top 500px
        
.btn
    padding 10px 20px
    display inline-block
    font-size 2rem
    text-align center
    border 0
    background white
    color gray
    cursor pointer
    border-radius 5px
    transition all 0.2s ease-out
    
    &:hover
    &:focus
        background gray
        color white
        outline none
        
    &.selected
        background gray
        color white
        
    @media screen and (min-resolution: 130dpi)
        width 100%
        padding 20px
        font-size 3rem