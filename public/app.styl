.projects-container
    background white
    
    .label
        margin 10px
        padding 10px 20px
        display inline-block
        font-size 1.6rem
        font-weight 700
        
    .project
        margin 10px
    
.details-container
    margin-top 50px
            
    .text-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        text-align left
        font-size 2rem
        
        .title
            margin-bottom 25px
            
        .commentary
            max-width 700px
            margin-left 5px
            margin-bottom 15px
            font-size 1.6rem
            white-space pre-wrap
            
        .meta
            margin-bottom 10px
            
            .year
                margin 5px
                display inline-block
                font-size 1.6rem
            
            .type
                margin 5px
                display inline-block
                font-size 1.6rem
            
        .technologies
            // margin-left -5px
            margin-bottom 10px
        
            .technology
                margin 5px
                display inline-block
                font-size 1.2rem
    
    .image-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        
        img
            height 250px
            margin-left 10px
            margin-bottom 10px
            float right
            border 1px solid gray
            cursor pointer
            
            &:hover
            &:focus
                border 1px solid black
            
    .image-overlay
        height 100vh
        position fixed
        top 0
        left 0
        right 0
        padding-top 50px
        background rgba(0, 0, 0, .8)
        
.btn
    padding 10px 20px
    display inline-block
    font-size 1.6rem
    background white
    border 1px solid gray
    color gray
    cursor pointer
    
    &:hover
    &:focus
        background gray
        color white
        outline none
        
    &.selected
        background gray
        color white
        
    .coding
        
        &:hover
        &:focus
        &.selected
            background blue
        
    .hybrid
        
        &:hover
        &:focus
        &.selected
            background purple
        
    .design
        
        &:hover
        &:focus
        &.selected
            background red
            
box-shadow(radius, color)
    box-shadow 0px 5px radius color