*
    box-sizing border-box

html
    font-family sans-serif
    font-size 62.5%
        
    @media screen and (min-resolution: 130dpi)
        font-size 125%
    
h1
    font-size 5rem
    font-weight 400
    
section
    width 100%
    text-align center

nav
    display inline

.contact-link-container
    height 50px
    
    .contact-link
        margin 5px
        float left
        font-size 1.2rem
        color gray
        text-decoration none
        
        &:hover
        &:focus
            color black
            font-weight 700
            
        @media screen and (min-resolution: 130dpi)
            margin 20px
            font-size 2rem

.name-container
    margin-top 50px
    color gray

.projects-container
    margin-top 50px
    background white
    
    .label
        margin 10px
        padding 10px 20px
        display inline-block
        font-size 1.6rem
        font-weight 700
        
        @media screen and (min-resolution: 130dpi)
            display none
            
    .project
        margin 10px
        
        @media screen and (min-resolution: 130dpi)
            width 100%
            padding 20px
    
.details-container
    margin-top 50px
            
    .text-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        text-align left
        font-size 2rem
        
        .title
            margin-bottom 25px
            
        .commentary
            max-width 700px
            margin-left 5px
            margin-bottom 15px
            font-size 1.4rem
            white-space pre-wrap
            
        .meta
            margin-bottom 10px
            
            .year
                margin 5px
                display inline-block
                font-size 1.6rem
            
            .type
                margin 5px
                display inline-block
                font-size 1.6rem
            
        .technologies
            margin-bottom 10px
        
            .technology
                margin 5px
                display inline-block
                font-size 1.2rem
                
                @media screen and (min-resolution: 130dpi)
                    margin 5px 10px
    
    .image-container
        width 50%
        padding 10px
        display inline-block
        vertical-align top
        
        img
            height 250px
            margin-left 10px
            margin-bottom 10px
            float right
            border 1px solid gray
            cursor pointer
            
            &:hover
            &:focus
                border 1px solid black
            
    .image-overlay
        height 100vh
        position fixed
        top 0
        left 0
        right 0
        padding-top 50px
        background rgba(0, 0, 0, .8)
        
        // TODO: decide where to show picture on mobile
        // @media screen and (min-resolution 130dpi)
        //     padding-top 500px
        
.btn
    padding 10px 20px
    display inline-block
    font-size 1.6rem
    background white
    border 1px solid gray
    color gray
    cursor pointer
    
    &:hover
    &:focus
        background gray
        color white
        outline none
        
    &.selected
        background gray
        color white
        
    @media screen and (min-resolution: 130dpi)
        font-size 2.4rem
        border 4px solid gray