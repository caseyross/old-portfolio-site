html
    box-sizing border-box
    font-family Arial

body
    margin 0
    
h1
    font-size 60px
    font-weight normal

section
    width 100%
    text-align center
    
hr
    height 2px
    margin 0
    border 0
    background linear-gradient(to right, blue, red)

#name
    color gray

#topContainer
    height 150px
    padding-top 100px
    
#middleContainer
    background white
    
#bottomContainer
    height 650px
    
    .details
        width 900px
        margin 0 auto
        
        .images
            width 50%
            display inline-block
            
        .description
            width 50%
            display inline-block
    
.project
    margin 2px
    padding 10px
    display inline-block
    font-size 24px
    background gray